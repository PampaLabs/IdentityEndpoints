@typeparam TItem

<div class="container">
    <div class="column">
        <h4>@LeftText</h4>
        <div class="list-box">
            <ListBox Items="LeftItems" Name="Name" Value="Value" TItem="TItem"></ListBox>
        </div>
    </div>
    <div class="controls">
        <ul>
            <li>
                <button class="btn btn-primary">
                    <i class="fa-solid fa-chevron-right"></i>
                </button>
            </li>
            <li>
                <button class="btn btn-primary">
                    <i class="fa-solid fa-chevron-left"></i>
                </button>
            </li>
        </ul>
    </div>
    <div class="column">
        <h4>@RightText</h4>
        <div class ="list-box">
            <ListBox Items="RightItems" Name="Name" Value="Value" TItem="TItem"></ListBox>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string? LeftText { get; set; }

    [Parameter]
    public string? RightText { get; set; }

    [Parameter]
    public IList<TItem> LeftItems { get; set; }

    [Parameter]
    public IList<TItem> RightItems { get; set; }

    [Parameter]
    public Func<TItem, string> Name { get; set; }

    [Parameter]
    public Func<TItem, string> Value { get; set; }
}
